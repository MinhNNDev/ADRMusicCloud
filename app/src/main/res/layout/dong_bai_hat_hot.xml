<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp">

    <ImageView
        android:id="@+id/imageviewbaihathot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/textviewtenbaihethot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewbaihathot"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#363636"
        android:textSize="18sp"
        android:text="Tên bài hát"/>
    
    <TextView
        android:id="@+id/textviewcasibaihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewtenbaihethot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/imageviewbaihathot"
        android:maxLines="1"
        android:text="Tên ca sĩ"
        android:textSize="18sp"
        android:textColor="#8c8a8a"/>
    
    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:id="@+id/imageviewluotthich"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />
</RelativeLayout>